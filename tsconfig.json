{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    // "sourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "typeRoots": ["node_modules/@types", "./handler/types/ProcessEnv.d.ts"],
    "baseUrl": "./",
    "lib": ["esnext", "dom"]
  },
  "files": ["src/index.ts"],
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}